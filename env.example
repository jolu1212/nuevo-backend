# Configuración del servidor OMAR Backend
# Copia este archivo a .env y configura tus valores reales

# Configuración de Flask
SECRET_KEY=tu_clave_secreta_aqui
FLASK_ENV=production
FLASK_DEBUG=false

# API Key de OpenAI
OPENAI_API_KEY=tu_api_key_de_openai_aqui

# Configuración de Railway
RAILWAY_STATIC_URL=https://omar-backend-production.up.railway.app

# Configuración de base de datos (PostgreSQL en Railway)
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Configuración de Redis (opcional, para cache)
REDIS_URL=redis://localhost:6379

# Configuración de CORS
CORS_ORIGINS=https://omar-backend-production.up.railway.app,http://localhost:3000

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/omar_backend.log

# Configuración de seguridad
JWT_SECRET_KEY=tu_jwt_secret_aqui
BCRYPT_ROUNDS=12

# Configuración de OpenAI
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.3

# Configuración de archivos
MAX_FILE_SIZE=16777216  # 16MB en bytes
UPLOAD_FOLDER=uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp3,wav,m4a

# Configuración de sesiones
SESSION_TIMEOUT=3600  # 1 hora en segundos
MAX_SESSIONS_PER_USER=5

# Configuración de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hora en segundos
